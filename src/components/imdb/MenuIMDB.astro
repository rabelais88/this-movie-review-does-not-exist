---
import SearchReviewInput from '@/components/imdb/react/SearchReviewInput';
---

<nav
  data-comp="menu"
  class="lg:h-[56px] bg-[#121212] text-white py-[10px] px-4 lg:px-0"
>
  <div
    class="max-w-[1080px] mx-auto flex flex-col lg:flex-row items-center gap-2 lg:gap-0"
  >
    <div class="flex w-full flex-1">
      <a href="/"><img src="/logo-tmdne-imdb.svg" class="mr-2 rounded-sm" /></a>
      <SearchReviewInput
        client:only="react"
        className="flex-1 text-black [&>input]:w-full [&>input]:rounded-md [&>input]:h-[31px]"
        cloudFrontUrl={import.meta.env.CLOUDFRONT_URL}
      />
    </div>
    <div class="flex">
      <div
        class="h-full w-[1px] mx-2 justify-stretch bg-[rgba(255,255,255,0.16)]"
      >
      </div>
      <a
        class="flex justify-center items-center pr-2 font-imdb-roboto font-semibold text-sm"
        href="https://github.com/rabelais88/this-movie-review-does-not-exist"
        >Github Repo</a
      >
      <a class="px-3 font-imdb-roboto font-semibold text-sm" href="/rt">Mode</a>
    </div>
  </div>
</nav>
