---
import AdPlaceholderBottom from '@/components/AdPlaceholderBottom.astro';
import MenuIMDB from '@/components/imdb/MenuIMDB.astro';
interface Props {
  title: string;
  metaImage: string;
  metaDesc: string;
}

const { title, metaImage, metaDesc } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:image" content={metaImage} />
    <meta property="og:description" content={metaDesc} />
    <meta property="description" content={metaDesc} />
  </head>
  <body>
    <MenuIMDB />
    <slot />
    <AdPlaceholderBottom />
  </body>
</html>
<style is:global>
