---
import AdPlaceholderBottom from '@/components/AdPlaceholderBottom.astro';
import MenuIMDB from '@/components/imdb/MenuIMDB.astro';
import MenuSideIMDB from '@/components/imdb/MenuSideIMDB.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/android-chrome-512x512.png" />
    <meta name="generator" content={Astro.generator} />
    <title>TMRDNE:{title}</title>
    <meta name="og:title" content=`This Movie Review Does Not Exist:${title}` />
    <meta
      name="og:image"
      content={`${import.meta.env.HOST_URL}/logo-tmdne-imdb.svg`}
    />
    <meta
      property="og:description"
      content="This Movie Review Does Not Exist, made by generative AI"
    />
  </head>
  <body>
    <MenuIMDB />
    <main class="max-w-[1080px] mx-auto bg-white">
      <div class="flex">
        <div class="flex-1 px-4">
          <slot />
        </div>
        <MenuSideIMDB class="hidden lg:inline-block" />
      </div>
    </main>
    <AdPlaceholderBottom class="lg:hidden" />
  </body>
</html>
<style is:global>
  :root {
    /* --accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		); */
  }
  body {
    background-color: #000;
  }
</style>
