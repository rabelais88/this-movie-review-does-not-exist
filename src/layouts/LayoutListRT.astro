---
import MenuRT from '@/components/rt/MenuRT.astro';
import '@fontsource-variable/libre-franklin';
import '@fontsource/bebas-neue';
import MenuSideRT from '@/components/rt/MenuSideRT.astro';
import AdPlaceholderBottom from '@/components/AdPlaceholderBottom.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>TMRDNE:{title}</title>
    <meta name="og:title" content=`This Movie Review Does Not Exist:${title}` />
    <meta
      name="og:image"
      content={`${import.meta.env.HOST_URL}/logo-tmdne-rt.svg`}
    />
    <meta
      property="og:description"
      content="This Movie Review Does Not Exist, made by generative AI"
    />
  </head>
  <body>
    <main class="max-w-[1100px] bg-white mx-auto">
      <MenuRT />
      <div class="flex">
        <div class="flex-1">
          <slot />
        </div>
        <MenuSideRT class="hidden lg:inline-block" />
      </div>
      <AdPlaceholderBottom class="lg:hidden" />
    </main>
  </body>
</html>
<style is:global>
  :root {
    /* --accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		); */
  }
  body {
    background-color: #eee;
  }
</style>
